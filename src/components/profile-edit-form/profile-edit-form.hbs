<section class="profile">
    <aside class="profile__return">
        {{> arrow-button/arrow-button id="profile-return" prev=true }}
    </aside>
    <form class="container profile__content">
        <label class="profile__photo-wrapper photo-wrapper mb-5">
            <img src="../../images/profile-no-photo.svg" alt="" class="profile__photo">
            <span class="photo-wrapper__hover">Поменять аватар</span>
            <input type="file" name="avatar" accept="image/gif,image/jpeg,image/jpg,image/png" style="display: none;">
        </label>
        <div class="profile__info-wrapper">
            <div class="profile__settings">
                {{> input/input id="email" inputType="email" title="Почта" inputName="email" value=email }}
                {{> input/input id="login" inputType="text" title="Логин" inputName="login" value=login }}
                {{> input/input id="first_name" inputType="text" title="Имя" inputName="first_name" value=firstName }}
                {{> input/input id="second_name" inputType="text" title="Фамилия" inputName="second_name" value=secondName }}
                {{> input/input id="display_name" inputType="text" title="Имя в чате" inputName="display_name" value=displayName }}
                {{> input/input id="phone" inputType="tel" title="Почта" inputName="phone" value=phone }}
            </div>
            {{> button/button id="save-profile" mixin="btn--prime" name="Сохранить" }}
        </div>
    </form>
</section>