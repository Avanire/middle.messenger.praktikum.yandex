.input-field {
    &__label {
        display: flex;
        flex-direction: column;
        font-weight: 500;
        font-size: 9px;
        line-height: 9px;
        color: var(--gray-color);
    }
    &__error {
        font-weight: 400;
        font-size: 8px;
        line-height: 8px;
        color: #FF2F2F;
        margin-top: 8px;
        display: none;
    }
    &__error-visible {
        display: block;
    }
}
