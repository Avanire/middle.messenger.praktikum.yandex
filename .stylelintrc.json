{
  "extends": "stylelint-config-standard",
  "rules": {
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": true,
    "pcss/at-rule-no-unknown": true
  },
  "ignoreFiles": [
    "dist/*"
  ],
  "overrides": [
    {
      "files": ["*.pcss"],
      "customSyntax": "postcss-lit"
    }
  ]
}
